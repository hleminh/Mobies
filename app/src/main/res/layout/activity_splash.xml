<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoang.mobies.activities.SplashActivitiy"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/rl_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/iv_logo"
        android:layout_width="192dp"
        android:layout_height="220dp"
        android:background="@drawable/logo_gif"
        android:layout_centerVertical="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_splash"
        android:layout_marginTop="15dp"
        android:layout_below="@id/rl_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <ProgressBar
        android:id="@+id/pb_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorTextPrimary"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
